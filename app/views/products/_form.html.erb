<%= form_for(@product) do |f| %>

	<div class="product_name">
		<%= f.text_field :product_name %><br>
	</div>
	<div class="description">
		<%= f.text_field :description %><br>
	</div>
	<div class="price">
		<%= f.text_field :price %><br>
	</div>
	<div class="thumburl">
		<%= f.url_field :thumburl %><br>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>